{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "types": ["node"],
        "declaration": false,
        "sourceMap": true
    },
    "include": ["src/**/*", "src/generated/prisma"],
    "exclude": ["node_modules", "dist", "prisma"]
}
